<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Agenda" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
           <!-- primary brand color -->
            <item name="colorPrimary">@color/black</item>
            <item name="colorPrimaryVariant">@color/gray</item>
            <item name="colorOnPrimary">@color/white</item>
            <!--secondary color brand -->
            <item name="colorSecondary">@color/teal_200</item>
            <item name="colorSecondaryVariant">@color/lavander</item>
            <item name="colorOnSecondary">@color/white</item>
            <!--status bar color-->
            <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        </style>

        <style name="BACKGROUND">
            <item name="android:background">@color/gray</item>
        </style>

        <style name="TEXTCOLOR">
            <item name="android:textColor">@color/white</item>
        </style>

        <style name="FLOATING_ACTION_BUTTON">
            <item name="android:backgroundTint">@color/purple_500</item>
        </style>
    </resources>
